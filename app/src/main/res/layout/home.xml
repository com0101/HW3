<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/homeconstraint">

        <ImageView
                android:layout_width="184dp"
                android:layout_height="184dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/background_image"
                android:layout_marginTop="50dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/profilebutton"
                app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.72"/>
        <Button
                android:text="@string/title_profile"
                android:layout_width="116dp"
                android:layout_height="42dp"
                android:id="@+id/profilebutton"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="80dp"
                android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/background_image"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:background="@color/colorPrimary" android:textColor="@color/colorwhite" android:textSize="18sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>